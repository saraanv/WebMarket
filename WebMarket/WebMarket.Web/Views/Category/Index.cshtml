@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="Container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2>
                دسته‌بندی ها
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                ایجاد دسته‌بندی جدید <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                نام دسته
            </th>
            <th>
                ترتیب نمایش
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="edit" asp-route-id="@obj.Id">
                            ویرایش <i class="bi bi-pencil-square"></i>
                        </a>
                            <a asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id">
                                حذف <i class="bi bi-trash3"></i>
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>